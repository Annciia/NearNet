<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Login / Rejestracja -->
        <EditText
            android:id="@+id/editLogin"
            android:hint="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editPassword"
            android:hint="Hasło"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editAvatar"
            android:hint="Avatar URL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnRegister"
            android:text="Rejestracja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnLogin"
            android:text="Logowanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Update -->
        <EditText
            android:id="@+id/editNewName"
            android:hint="Nowe imię"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/editNewAvatar"
            android:hint="Nowy avatar URL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnUpdate"
            android:text="Aktualizuj profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Delete -->
        <EditText
            android:id="@+id/editDeletePassword"
            android:hint="Hasło do usunięcia konta"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDelete"
            android:text="Usuń konto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnGoToRooms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Przejdź do pokoi"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>

